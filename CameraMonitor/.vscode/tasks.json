{
    "version": "2.0.0",
    "command": "sh",
    "isShellCommand": true,
    "args": ["-c"],
    "showOutput": "always",
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "tasks": [
        {
            "taskName": "CMake with g++",
            "type": "shell",
            "command": "cmake .. -G 'Unix Makefiles'",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "taskName": "make",
            "args": [
                "make -j 8"
            ],
            "isBuildCommand": true,
            "problemMatcher": []
        }
    ]
}